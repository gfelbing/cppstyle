#!/usr/bin/env python3.5

import sys, errno
from cppstyle import check_naming, check_order, utils

if __name__ == "__main__":
    args = utils.args()
    config = utils.config(args.config)

    for file in args.files:
        source = utils.parseFile(file)
        issues = []
        issues += check_naming.check(file, source, config)
        issues += check_order.check(file, source, config)
        if len(issues) > 0:
            print("Found issues in file '{}':".format(file))
            for issue in issues:
                print("    {}".format(issue))
            sys.exit(errno.EFAULT)
